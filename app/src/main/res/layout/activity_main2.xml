<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/mock_period_data_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="周期产生日志数据" />
        <Button
            android:id="@+id/mock_one_data_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="周期产生一条日志数据" />
        <Button
            android:id="@+id/mock_crash_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模拟崩溃" />
        <Button
            android:id="@+id/mock_page_jump_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="页面跳转" />
        <Button
            android:id="@+id/mock_click_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅用于测试用例测试点击产生的日志" />
    </LinearLayout>


</ScrollView>